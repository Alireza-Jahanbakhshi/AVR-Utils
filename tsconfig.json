{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020"],
    "allowJs": true,
    // "checkJs": true, // Typecheck .js files.
    "declaration": true, // Generates corresponding '.d.ts' file.
    "skipDefaultLibCheck": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}